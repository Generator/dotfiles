#!/bin/sh
## Start weechat in urxvt or create a new window on screen
screen -ls | grep 'No Sockets' > /dev/null
if [ $? -eq 0 ]; then
/home/aj/.local/bin/urxvtcd -e screen -S arch weechat-curses
else
session=$(screen -ls | grep 'Attached' | awk '{print $1 }')
screen -S $session -X screen weechat-curses
fi

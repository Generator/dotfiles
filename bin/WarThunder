#!/bin/sh

systemctl status NetworkManager |grep running > /dev/null
#warthunder=$(cd /media/WD1TB/WarThunder; ./updater)

if [ $? -eq 1 ]; then
sudo systemctl stop connman; sudo systemctl start NetworkManager; sleep 3;
cd /media/WD1TB/WarThunder; ./updater
else
cd /media/WD1TB/WarThunder; ./updater
fi


#!/bin/sh

## Get data
curl -s http://www.pathofexile.com/ladder/export-csv/league/Hardcore/index/{1,2,3,4,5,6,7} | grep 'Generatorpt\|pigsRflying\|KrawR\|shadowzordpt\|korghy\|Daviko\|Duartz\|esdrubal\|DeeThreeO\|StevoPt' | cut -d , -f 2,3,4,6 > ranks.csv;
sed -i '1i\Rank,Account,Character,Level' ranks.csv;

## Send csv

ftp_site=ftp.homepages.sapo.pt
username=ccgangdownloads.no.sapo.pt
passwd=19673843
filename="ranks.csv"

#echo "Sending file $filename to $ftp_site."

ftp -in <<EOF
open $ftp_site
user $username $passwd
bin
cd PoePT/ranks
put $filename 
close 
bye
EOF
